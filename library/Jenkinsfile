pipeline {
    agent any

    tools {
        jdk 'jdk-21'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'homework27_1', url: 'https://github.com/Marina-Mmm/library.git'
            }
        }

        stage('Build') {
            steps {
                bat './mvnw clean package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                bat 'docker-compose -f library/docker-compose.yml build --build-arg JAR_FILE=target/library-0.0.1-SNAPSHOT.jar'
            }
        }

        stage('Deploy') {
            steps {
                bat 'docker-compose -f library/docker-compose.yml up -d'
            }
        }
    }
}