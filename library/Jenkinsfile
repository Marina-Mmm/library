pipeline {
    agent any

    tools {
        jdk 'jdk-21'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'homework27_1', url: 'https://github.com/Marina-Mmm/library.git'
            }
        }

        stage('Build') {
            steps {
                dir('library') {
                    bat 'call mvnw.cmd clean package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('library') {
                    bat 'docker-compose -f docker-compose.yml build --build-arg JAR_FILE=target/library-0.0.1-SNAPSHOT.jar'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('library') {
                    bat 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }
    }
}
